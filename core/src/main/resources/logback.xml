<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="pro.piechowski.highschoolstory.movement.ControllerMovementInputSystem" level="info"/>
    <logger name="pro.piechowski.highschoolstory.movement.MovementInputSystem" level="info"/>
    <logger name="pro.piechowski.highschoolstory.movement.VelocitySystem" level="info"/>
    <logger name="pro.piechowski.highschoolstory.movement.CurrentSpritePositionSystem" level="info"/>
    <logger name="pro.piechowski.highschoolstory.movement.FaceDirectionSystem" level="debug"/>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
